        //-         a(href="/contacts/").collection-item Заказать

  section.categories.servicesParalax
    .parallax-container
      .parallax
        img(src="/img/sbg.jpg")
    .categoriesDesc
      .container
        .row
          .col.s12.m3
            .center.imgBl
              img(src="/img/1sb.png")
            p.center.white-text Больше 300 выполненых работ
          .col.s12.m3
            .center.imgBl
              img(src="/img/2sb.png")
            p.center.white-text Заказ отдаетя при 100% одобрении клиента
          .col.s12.m3
            .center.imgBl
              img(src="/img/3sb.png")
            p.center.white-text Клиенты обращаются к нам по несколько раз
          .col.s12.m3
            .center.imgBl
              img(src="/img/4sb.png")
            p.center.white-text Оплата на карту или наложенным платежом
